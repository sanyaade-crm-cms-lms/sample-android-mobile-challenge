<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent" android:padding="@dimen/buttons_margin"
    android:layout_height="match_parent">
    
    <TextView
        android:id="@+id/transaction_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginBottom="@dimen/buttons_margin" />
    <TextView
        android:id="@+id/pending_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginBottom="@dimen/buttons_margin" />
    <TextView
        android:id="@+id/transaction_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginBottom="@dimen/buttons_margin" />
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginBottom="@dimen/buttons_margin" />

    <TextView
        android:id="@+id/activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginBottom="@dimen/buttons_margin" />

</LinearLayout>