<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.citi.ap.citiapp" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CitiApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.CitiMainActivity"
            android:label="@string/title_activity_citi_main" >
        </activity>

        <activity
            android:name=".activity.BalancesActivity"
            android:label="@string/title_activity_citi_main" >
        </activity>

        <activity
            android:name=".activity.TransactionsActivity"
            android:label="@string/title_activity_citi_main" >
        </activity>
    </application>

</manifest>
